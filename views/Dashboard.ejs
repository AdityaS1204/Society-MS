<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Personal Dashboard[USER]</title>
  <link rel="stylesheet" href="/css/Dashboard.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="profile">
        <img src="<%= user.profileImageURL %>" alt="Profile Image" class="profile-img">
        <h2><%= user.firstName %> <%= user.lastName %></h2>
        <p><%= user.email %></p>
      </div>
      <nav class="nav-menu">
        <ul>
          <li>Profile</li>
          <li>Add Documents</li>
          <li>Finance</li>
          <li>Services</li>
          <li>Edit Details</li>
        </ul>
      </nav>
      <button class="logout-btn">Log Out</button>
    </div>

    <!-- Content Section -->
    <div class="content">
      <header class="header">
        <h1>Dashboard</h1>
        <button class="support-btn">Contact Support</button>
        <button class="hamburger-btn" onclick="toggleSidebar()">â˜°</button>
      </header>  

      <!-- Cards Section -->
      <div class="cards">
        <!-- Card 1 -->
        <div class="card">
          <div class="card-title">Details</div>
          <div class="card-content">
            <p>Name: <%= user.firstName %> <%= user.lastName %></p>
            <p>Email: <%= user.email %></p>
            <p>Phone: <%= user.Phone %></p>
            <p>Address: <%= user.address %></p>
          </div>
        </div>

        <!-- Other Cards -->
        <div class="card">
          <div class="card-title">Notices</div>
          <div class="card-content"></div>
        </div>

        <div class="card">
          <div class="card-title">Pending Requests</div>
          <div class="card-content"></div>
        </div>

        <!-- Request Maintenance Button -->
        <div class="card">
          <div class="card-title">Maintenance</div>
          <div class="card-content">
            <button class="request-btn" onclick="openModal()">Request Maintenance</button>
          </div>
        </div>
      </div>
    </div>
  </div>  

  <!-- External JS File -->
  <script src="/js/Dashboard.js"></script>
</body>
</html>
